{% extends 'base.html.twig' %}

{% block title %}Les figures{% endblock %}

{% block body %}
{% if app.user %}
<div class="mt-5 text-center">
    <a href="{{ path('trick.create') }}"><button class="btn btn-primary">Ajouter une figure</button></a>
</div>
{% endif %}
<div class="container-fluid mt-4">
    <div class="row">
    {% for trick in tricks %}
    <div class="col-sm-6 col-lg-4 col-xl-3 text-center mt-4">
    <div class="card">
        <a href="{{ path('trick.single' , {slug : trick.slug, id : trick.id}) }}">
        <div class="card-title">
            <h3>{{ trick.title }} </h3>
        </div>
        <p>Publi√© depuis le {{ trick.formatedDate }} </p>
    </div>
    </a>
</div>



    

    {% endfor %}

</div>
</div>
{% endblock %}