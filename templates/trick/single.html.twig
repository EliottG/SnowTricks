{% extends 'base.html.twig' %}

{% block title %}{{ trick.title }}{% endblock %}

{% block body %}
<div class='container'>
    <a href="{{ path('trick')}}"><button class="btn btn-primary">Retour aux figures</button></a>
    {% if app.user %}
    <a href="{{ path('trick.update' , { id : trick.id , slug : trick.slug} )}}"><button class="btn btn-primary">Modifier</button></a>
    {% endif %}
    <h1>{{ trick.title }} </h1>
    <p>{{ trick.description }}</p>
    <div class='row'>
     {% for picture in trick.pictures  %}
     <div class="col-xl-3">
        <img class='pr-2' src="/uploads/trick/{{ picture.name }}" alt='Photo de tricks' width='300px' height="200px">
    </div>
    {% endfor %}
    <div class="col-xl-3">
    {% for video in trick.videos %}
    <embed src="{{ video.link }}"  allowfullscreen="true" width="300" height="200px">
    {% endfor %}
    </div>
    </div>
</div>
{% endblock %}
