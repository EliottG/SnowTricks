{% extends 'base.html.twig' %}

{% block title %}Modifier{% endblock %}

{% block body %}




    <div class="container mt-5">

    {{ form_start(form) }}
    {{ form_rest(form) }}

    <h3 class='mt-4 mb-4'>Image principale</h3>
    <img width='100%' src='/uploads/trick/{{ trick.mainImage }}'>
    <h3 class='mt-4 mb-4'>Images</h3>
    <div class="row">
    {% for picture in trick.pictures  %}
    <div class="col-xl-3">
        <img class='pr-2' src="/uploads/trick/{{ picture.name }}" alt='Photo de tricks' width='300px' height="200px">
        <a method='DELETE' href="{{ path('delete.trick.picture', {id : picture.id , trickId : trick.id , slug : trick.slug}) }}" alt='supprimer'><img src='/pictures/poubelle.png' width='30px'></a>
    </div>

    {% endfor %}
</div>

<h3 class='mt-4 mb-4'>Vid√©os</h3>
<div class="row">
{% for video in trick.videos %}
<div class="col-xl-3">
    <embed src="{{ video.link }}"  allowfullscreen="true" width="300" height="200px">
    <a method='DELETE' href="{{ path('delete.trick.video', {id : video.id , trickId : trick.id , slug : trick.slug}) }}" alt='supprimer'><img src='/pictures/poubelle.png' width='30px'></a>
</div>

{% endfor %}
</div>
<a class='mt-5 btn btn-danger delete'  href="{{ path('trick.delete', {id: trick.id,csrf: csrf_token('trick_delete')}) }}">Supprimer le Trick</a>
</div>

{% endblock %}
