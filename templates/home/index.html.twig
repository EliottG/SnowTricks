{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class='background-home'>
    <div class="container">
        <h1 id='up' class='pt-5 text-light font-weight-bold'>SnowTricks</h1>
        <h2 class='pt-2 text-uppercase text-info'>Riders<br> on<br> the<br> storm *</h2>
        
    </div>
    <a class='up' href='#down'><img src='/pictures/down.png'></a>
</div>


{% if app.user %}
<div class="mt-5 text-center">
    <a href="{{ path('trick.create') }}"><button class="btn btn-dark">Ajouter une figure</button></a>
</div>
{% endif %}
<div id="tricks" class="container-fluid mt-4">
    <div class="row">
        {% for trick in tricks %}
        <a href="{{ path('trick.single' , {slug : trick.slug, id : trick.id}) }}">
            <div class="card-trick col-12 col-sm-6 col-md-6 col-lg-4 col-xl-3">
                <div class="one-trick shadow">
                    <img class="card-picture" src='/uploads/trick/{{ trick.mainImage }}' height="200px">
                    <div class="row body-card">
                        <div class="col-9">

                            <h4 class="text-uppercase ml-3">{{ trick.title }} </h4>
            </a>
        </div>
        {% if app.user %}
        <div class="col-3">
            <a href="{{ path('trick.update', { id: trick.id , slug: trick.slug }) }}" alt='modifier'><img src="/pictures/crayon.png"
                    width="37px" alt="editer"></a>

            <a class='delete' href="{{ path('trick.delete', {id: trick.id,csrf: csrf_token('trick_delete')}) }}" alt='supprimer'><img
                    src="/pictures/poubelle.png" width="37px" alt="supprimer"></a>
        </div>
        {% endif %}
    </div>
</div>
</div>


{% endfor %}

</div>

<div class='text-center'><a href='#down'><button id='buttonLoadMore' onclick='loadMore()' class='text-uppercase pt-2 pb-2 pr-5 pl-5 btn btn-dark'>Voir plus</button></a></div>
<a class='' id='down' href='#up'><img src='/pictures/up.png'></a>
</div>



{% endblock %}