{% extends 'base.html.twig' %}

{% block title %}Profil {{ app.user.username }}{% endblock %}

{% block body %}

<div class='container-fluid'>
    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <div class="row">
                <div class="col-xl-12 text-center mb-5">
                    <div class="row">
                        <div class="col-xl-2">
                            {% if user.pictureName %}
                            <img class='pr-2' src="/uploads/profil/{{ user.pictureName }}" alt='Photo de profil'
                                width='150px'>
                            {% else %}
                            <img class='pr-2' src="/uploads/profil/usual.jpg" alt='Photo de profil' width='150px'>
                            {% endif %}
                        </div>
                        <div class="col-xl-4">
                            <h5 class="pt-3 display-3">{{ user.username }}</h5>
                            <hr class="my-2">
                        </div>
                    </div>
                </div>

            </div>
            <div class="col-xl-12">
            <p class="lead text-justify">{{ user.catchPhrase }}</p>
            <hr class="my-2">
        </div>
        </div>


    </div>
</div>
</div>
<div class="container">
    {{ form_start(form)}}

    {{ form_rest(form) }}
    <a href='{{ path('update.password', {id : id})}}'>Modifier mon mot de passe</a>
</div>
{% endblock %}